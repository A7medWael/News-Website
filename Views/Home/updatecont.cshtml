@model ContactUs

<div class="container" style="margin-top:10px;margin-bottom:10px">
    <div class="col-sm-8">
        <form asp-action="saveupdate" asp-controller="Home" asp-route-id="@Model.Id" >
            <div class="row">
                <div class="col-md-6 form-group">
                    <input type="text"  asp-for="Name" class="form-control" placeholder="Your Name">
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input type="email" class="form-control"  asp-for="Email" placeholder="Your Email">
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="text" class="form-control"  asp-for="Subject" placeholder="Subject">
            </div>
            <div class="form-group mt-3">
                <textarea class="form-control"  asp-for="Message" rows="7" placeholder="Message"></textarea>
            </div>
            <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">We Will Read Your Message</div>
                <div><input type="submit" class="btn-success" value="Edit" style="color:black;background-color:deepskyblue" /></div>
                </div>
        </form>
    </div>
</div>
